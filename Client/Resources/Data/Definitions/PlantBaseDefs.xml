<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <Def Name="PlantBase" Abstract="True">
    <category>Plant</category>
    <type>Bitspoke.Ludus.Shared.Entities.Definitions.Natural.Plants.PlantDef</type>
    <assembly>Core</assembly>
    <class>Plant</class>
    
    <graphic>
      <texture>
        <type MustReplace="True">
          <mesh>
            <density><min>0.0</min><max>9</max></density>
          </mesh>
        </type>
      </texture>
      <scale>
        <min>0.3</min>
        <max>1.0</max>
      </scale>
      <positionVariation>
        <min>-0.25</min>
        <max>0.25</max>
      </positionVariation>
    </graphic>
    
    <plant>
      <fertility>
        <min>0.7</min>
        <max>1.0</max>
        <sensitivity>1.0</sensitivity>
      </fertility>
    </plant>
    
    <ui>
      <interactable>False</interactable>
      <tooltip>False</tooltip>
    </ui>
    
    <age>
      <tickInterval>Long</tickInterval>
    </age>
  </Def>
  <Def Name="TreeBase" ParentName="PlantBase" Abstract="True">
    <graphic>
      <texture Root="Entities/Plants/Natural/Tree/">
        <type MustReplace="True"><single/></type>
      </texture>
      <scale>
        <min>1.3</min>
        <max>2.0</max>
      </scale>
    </graphic>
    <plant>
      <isWild>True</isWild>
      <canCulivate>True</canCulivate>
      <fertility>
        <min>0.5</min>
        <max>0.5</max>
        <sensitivity>0.5</sensitivity>
      </fertility>
      <ClusterRadius>
        <Radius>8</Radius>
        <Weight>24</Weight>
      </ClusterRadius>
    </plant>
    <ui>
      <interactable>True</interactable>
    </ui>
    <age>
      <Lifespan>
        <GrowDaysMultiplier>9</GrowDaysMultiplier>
      </Lifespan>
    </age>
    <movement>
      <cost>1.0</cost>
    </movement>
    <placement>
      <mask Name="Structure">-1</mask>
    </placement>
  </Def>
  <Def Name="BushBase" ParentName="PlantBase" Abstract="True">
    <graphic>
      <texture>
        <type MustReplace="True"><single/></type>
      </texture>
      <scale>
        <min>0.5</min>
        <max>1.0</max>
      </scale>
    </graphic>
    <plant>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>3</growDays>
      <ClusterRadius>
        <Radius>4</Radius>
        <Weight>5</Weight>
      </ClusterRadius>
    </plant>
    <ui>
      <interactable>True</interactable>
    </ui>
    <age>
      <Lifespan>
        <GrowDaysMultiplier>9</GrowDaysMultiplier>
      </Lifespan>
    </age>
  </Def>
  <Def Name="CoverBase" ParentName="PlantBase" Abstract="True">
    <graphic>
      <scale>
        <min>0.1</min>
        <max>0.5</max>
      </scale>
    </graphic>
    <plant>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>2</growDays>
      <ClusterRadius>
        <Radius>4</Radius>
        <Weight>5</Weight>
      </ClusterRadius>
    </plant>
    <ui>
      <interactable>False</interactable>
    </ui>
    <age>
      <Lifespan>
        <GrowDaysMultiplier>3</GrowDaysMultiplier>
      </Lifespan>
    </age>
  </Def>
</Defs>
